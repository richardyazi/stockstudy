FROM node:18-alpine

# 安装curl用于健康检查
RUN apk add --no-cache curl

WORKDIR /app

# 复制依赖文件
COPY package*.json ./

# 安装所有依赖（使用缓存优化）
RUN npm install

# 复制源代码
COPY . .

# 暴露端口
EXPOSE 3000

# 设置环境变量
ENV NODE_ENV=development
ENV HOST=0.0.0.0
ENV PORT=3000
ENV CHOKIDAR_USEPOLLING=true

# 启动开发服务器（支持热重载）
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]